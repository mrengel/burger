<h1>Eat Da Burger</h1>

<main>
  <div class ="container">
    <div class="row">
      <div class="col md6">
        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <div>
                <form action="/burgers/{{this.id}} method="PUT">
                  <button type="submit" class='undevoured'> {{this.burger_name}}</button>
                </form>
              </div>
            {{/unless}}
          {{/each}}
        </ul>
      </div>

      <div class="col md6">
        <ul>
          {{#each burgers}}
            {{#if this.devoured}}
              <div class='devoured'>
                <div>
                  {{this.burger_name}}
                </div>
            </div>
            {{/if}}
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</main>

<div class="row">
  <div class="col md12"
    <form action="/burgers" method="POST">  
      <input type="text" id="name" name="burger_name">
        
      <button type="submit" class="addBurger">Submit</button>
    </form> 
      <h2>Enter a burger you want to eat(max: 30 char). Then click submit</h2>

  </div>
</div>